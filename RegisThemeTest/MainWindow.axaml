<Window
    Classes="NakedWindow"
    Title="RegisThemeTest"
    d:DesignHeight="4050"
    d:DesignWidth="1350"
    mc:Ignorable="d"
    x:Class="RegisThemeTest.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:circleProgressBarsTestMvvm="clr-namespace:RegisThemeTest.CircleProgressBarsTestMVVM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:material="using:Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:regis_theme="clr-namespace:RegisThemeUI.Controls;assembly=RegisThemeUI"
    xmlns:regis_themeTest="clr-namespace:RegisThemeTest"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <regis_theme:InteractiveContainer>
        <regis_theme:DesktopPage
            LogoColor="#2f54eb"
            LogoKind="Xaml"
            MenuVisibility="False"
            Name="myPage"
            ShowBottomBorder="False"
            Title="RegisTheme UI Testing - New Project">

            <regis_theme:SideMenu MenuItemChanged="SideMenu_OnMenuItemChanged" WinUIStyle="True">
                <regis_theme:SideMenu.DataContext>
                    <regis_theme:SideMenuModel HeaderContentOverlapsToggleSidebarButton="True">

                        <regis_theme:SideMenuModel.HeaderContent>
                            <StackPanel Margin="0,4,0,0">
                                <Button
                                    Classes="Accent"
                                    Click="ChangeTheme"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,0">
                                    <material:MaterialIcon Foreground="{DynamicResource RegisThemeText}" Kind="LightbulbOutline" />
                                </Button>
                                <DockPanel Margin="0,20,0,0">
                                    <material:MaterialIcon
                                        DockPanel.Dock="Left"
                                        Foreground="{DynamicResource RegisThemeText}"
                                        Height="60"
                                        Kind="UserCircleOutline"
                                        Margin="10,0"
                                        Width="60" />
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="DemiBold"
                                            Text="Jean" />
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="Thin"
                                            Margin="3,1,0,0"
                                            Text="jean@mail.com" />

                                    </StackPanel>


                                </DockPanel>
                                <Border
                                    Background="LightGray"
                                    Height="0"
                                    Margin="35,10,35,20" />
                            </StackPanel>
                        </regis_theme:SideMenuModel.HeaderContent>

                        <regis_theme:SideMenuModel.MenuItems>
                            <regis_theme:SideMenuItem Header="DashBoard" Icon="CircleOutline">
                                <regis_theme:SideMenuItem.Content>
                                    <ScrollViewer>

                                        <WrapPanel Orientation="Horizontal">


                                            <Grid Margin="15">
                                                <Border
                                                    Classes="Card"
                                                    Margin="0,0,0,25"
                                                    Width="300">
                                                    <regis_theme:BusyArea Name="BusySignIn">
                                                        <StackPanel>
                                                            <material:MaterialIcon
                                                                Foreground="{DynamicResource RegisThemePrimaryColor}"
                                                                Height="30"
                                                                HorizontalAlignment="Center"
                                                                Kind="MicrosoftEdge"
                                                                Margin="10"
                                                                Width="30" />

                                                            <TextBlock
                                                                FontSize="18"
                                                                FontWeight="DemiBold"
                                                                HorizontalAlignment="Center"
                                                                Margin="0,5,0,27"
                                                                Text="Sign-in to your account" />

                                                            <TextBlock
                                                                FontWeight="DemiBold"
                                                                Margin="6,0,0,3"
                                                                Text="Username" />
                                                            <TextBox />
                                                            
                                                         

                                                            <TextBlock
                                                                FontWeight="DemiBold"
                                                                Margin="6,18,0,3"
                                                                Text="Password" />
                                                            <TextBox Margin="0,0,0,25" PasswordChar="*" />
                                                        </StackPanel>
                                                    </regis_theme:BusyArea>
                                                </Border>
                                                <Button
                                                    Classes="Primary Rounded"
                                                    Click="SetBusy"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    Width="160">
                                                    <StackPanel
                                                        HorizontalAlignment="Center"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                        <material:MaterialIcon Foreground="White" Kind="Login" />
                                                        <TextBlock
                                                            FontWeight="DemiBold"
                                                            Foreground="White"
                                                            Margin="10,0,0,0"
                                                            Text="Sign In" />
                                                    </StackPanel>
                                                </Button>
                                            </Grid>

                                            <StackPanel>
                                                <Border
                                                    Classes="Card"
                                                    Height="80"
                                                    Margin="15"
                                                    Width="300">
                                                    <Grid>


                                                        <StackPanel
                                                            HorizontalAlignment="Left"
                                                            Margin="0,-4,0,0"
                                                            VerticalAlignment="Center">
                                                            <TextBlock
                                                                FontSize="16"
                                                                FontWeight="DemiBold"
                                                                Text="Uploading File .." />

                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="{DynamicResource RegisThemeLowText}"
                                                                Margin="0,10,0,0"
                                                                Text="Presentation.pdf" />
                                                        </StackPanel>
                                                        <regis_theme:CircleProgressBar
                                                            Height="45"
                                                            HorizontalAlignment="Right"
                                                            Margin="-50,-50,-10,-50"
                                                            StrokeWidth="4"
                                                            Value="67"
                                                            VerticalAlignment="Center"
                                                            Width="45">
                                                            <TextBlock
                                                                FontSize="13"
                                                                FontWeight="DemiBold"
                                                                HorizontalAlignment="Center"
                                                                Margin="1,1,0,0"
                                                                Text="67"
                                                                VerticalAlignment="Center" />
                                                        </regis_theme:CircleProgressBar>

                                                    </Grid>
                                                </Border>

                                                <Border
                                                    Classes="Card"
                                                    Margin="15"
                                                    Width="300">
                                                    <StackPanel>
                                                        <TextBlock
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            HorizontalAlignment="Left"
                                                            Text="Daily Progress" />
                                                        <Grid Margin="0,18,0,0">
                                                            <TextBlock
                                                                FontSize="13"
                                                                Foreground="{DynamicResource RegisThemeLowText}"
                                                                HorizontalAlignment="Left"
                                                                Text="Project Workforce" />
                                                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                                <TextBlock
                                                                    FontSize="13"
                                                                    Foreground="ForestGreen"
                                                                    Text="32.21%" />
                                                                <material:MaterialIcon
                                                                    Foreground="ForestGreen"
                                                                    Kind="ArrowUp"
                                                                    Margin="5,0,0,0" />
                                                            </StackPanel>
                                                        </Grid>
                                                        <ProgressBar Margin="0,3,0,0" Value="16" />
                                                        <Grid Margin="0,13,0,0">
                                                            <TextBlock
                                                                FontSize="13"
                                                                Foreground="{DynamicResource RegisThemeLowText}"
                                                                HorizontalAlignment="Left"
                                                                Text="Project Velocity" />
                                                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                                <TextBlock
                                                                    FontSize="13"
                                                                    Foreground="DarkRed"
                                                                    Text="7.18%" />
                                                                <material:MaterialIcon
                                                                    Foreground="DarkRed"
                                                                    Kind="ArrowDown"
                                                                    Margin="5,0,0,0" />
                                                            </StackPanel>
                                                        </Grid>
                                                        <ProgressBar Margin="0,3,0,0" Value="62" />

                                                        <Grid Margin="0,13,0,0">
                                                            <TextBlock
                                                                FontSize="13"
                                                                Foreground="{DynamicResource RegisThemeLowText}"
                                                                HorizontalAlignment="Left"
                                                                Text="Critical Hours" />
                                                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                                <TextBlock
                                                                    FontSize="13"
                                                                    Foreground="ForestGreen"
                                                                    Text="16.89%" />
                                                                <material:MaterialIcon
                                                                    Foreground="ForestGreen"
                                                                    Kind="ArrowUp"
                                                                    Margin="5,0,0,0" />
                                                            </StackPanel>
                                                        </Grid>
                                                        <ProgressBar Margin="0,3,0,0" Value="34" />

                                                    </StackPanel>
                                                </Border>

                                            </StackPanel>

                                            <Border
                                                Classes="Card"
                                                Height="320"
                                                Margin="15"
                                                VerticalAlignment="Top"
                                                Width="300">
                                                <Grid>

                                                    <TextBlock
                                                        FontSize="16"
                                                        FontWeight="DemiBold"
                                                        Text="Humidity" />
                                                    <Viewbox
                                                        Height="175"
                                                        HorizontalAlignment="Center"
                                                        Margin="0,0,0,5"
                                                        VerticalAlignment="Center"
                                                        Width="175">
                                                        <regis_theme:WaveProgress Value="{Binding Value, ElementName=SliderT}" />
                                                    </Viewbox>

                                                    <DockPanel VerticalAlignment="Bottom">
                                                        <material:MaterialIcon
                                                            DockPanel.Dock="Left"
                                                            Foreground="#666666"
                                                            Height="20"
                                                            Kind="TemperatureLow"
                                                            Width="20" />
                                                        <material:MaterialIcon
                                                            DockPanel.Dock="Right"
                                                            Foreground="#666666"
                                                            Height="20"
                                                            Kind="TemperatureHigh"
                                                            Width="20" />
                                                        <Slider
                                                            Margin="8,0"
                                                            Maximum="100"
                                                            Minimum="0"
                                                            Name="SliderT"
                                                            Value="23" />
                                                    </DockPanel>

                                                </Grid>
                                            </Border>

                                            <Border
                                                Classes="Card"
                                                Margin="15"
                                                VerticalAlignment="Top"
                                                Width="500">
                                                <Grid>
                                                    <StackPanel>
                                                        <StackPanel>
                                                            <TextBlock
                                                                FontWeight="DemiBold"
                                                                HorizontalAlignment="Left"
                                                                Text="Notify me when .."
                                                                VerticalAlignment="Top" />
                                                            <StackPanel Margin="0,8,0,0">
                                                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                                    <CheckBox IsChecked="True" />
                                                                    <TextBlock
                                                                        FontSize="13"
                                                                        Foreground="{DynamicResource RegisThemeLowText}"
                                                                        Margin="8,0,0,0"
                                                                        Text="Daily updates"
                                                                        VerticalAlignment="Center" />
                                                                </StackPanel>
                                                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                                    <CheckBox IsChecked="True" />
                                                                    <TextBlock
                                                                        FontSize="13"
                                                                        Foreground="{DynamicResource RegisThemeLowText}"
                                                                        Margin="8,0,0,0"
                                                                        Text="New event"
                                                                        VerticalAlignment="Center" />
                                                                </StackPanel>
                                                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                                    <CheckBox IsChecked="False" />
                                                                    <TextBlock
                                                                        FontSize="13"
                                                                        Foreground="{DynamicResource RegisThemeLowText}"
                                                                        Margin="8,0,0,0"
                                                                        Text="When added on new team"
                                                                        VerticalAlignment="Center" />
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </StackPanel>
                                                        <Grid Margin="0,30,0,0">
                                                            <ToggleButton
                                                                Classes="Switch"
                                                                HorizontalAlignment="Right"
                                                                IsChecked="True"
                                                                VerticalAlignment="Center" />
                                                            <TextBlock
                                                                FontWeight="DemiBold"
                                                                HorizontalAlignment="Left"
                                                                Text="Mobile Notifications"
                                                                VerticalAlignment="Top" />

                                                            <TextBlock
                                                                FontSize="13"
                                                                Foreground="{DynamicResource RegisThemeLowText}"
                                                                HorizontalAlignment="Left"
                                                                Margin="0,22,0,0"
                                                                Text="Receive push notifications on your mobile phone."
                                                                TextWrapping="Wrap"
                                                                VerticalAlignment="Bottom"
                                                                Width="300" />
                                                        </Grid>
                                                        <Grid Margin="0,30,0,0">
                                                            <ToggleButton
                                                                Classes="Switch"
                                                                HorizontalAlignment="Right"
                                                                IsChecked="False"
                                                                VerticalAlignment="Center" />
                                                            <TextBlock
                                                                FontWeight="DemiBold"
                                                                HorizontalAlignment="Left"
                                                                Text="Desktop Notifications"
                                                                VerticalAlignment="Top" />

                                                            <TextBlock
                                                                FontSize="13"
                                                                Foreground="{DynamicResource RegisThemeLowText}"
                                                                HorizontalAlignment="Left"
                                                                Margin="0,22,0,0"
                                                                Text="Receive push notifications on your computer."
                                                                TextWrapping="Wrap"
                                                                VerticalAlignment="Bottom"
                                                                Width="300" />
                                                        </Grid>
                                                        <StackPanel Margin="0,30,0,0">

                                                            <TextBlock
                                                                FontWeight="DemiBold"
                                                                HorizontalAlignment="Left"
                                                                Text="Language"
                                                                VerticalAlignment="Top" />

                                                            <RadioButton Margin="0,13,0,0">
                                                                <TextBlock
                                                                    FontSize="13"
                                                                    Foreground="{DynamicResource RegisThemeLowText}"
                                                                    Margin="8,0,0,0"
                                                                    Text="English"
                                                                    VerticalAlignment="Center" />
                                                            </RadioButton>
                                                            <RadioButton IsChecked="True" Margin="0,5,0,0">
                                                                <TextBlock
                                                                    FontSize="13"
                                                                    Foreground="{DynamicResource RegisThemeLowText}"
                                                                    Margin="8,0,0,0"
                                                                    Text="Chinese"
                                                                    VerticalAlignment="Center" />
                                                            </RadioButton>
                                                            <RadioButton Margin="0,5,0,0">
                                                                <TextBlock
                                                                    FontSize="13"
                                                                    Foreground="{DynamicResource RegisThemeLowText}"
                                                                    Margin="8,0,0,0"
                                                                    Text="Japanese"
                                                                    VerticalAlignment="Center" />
                                                            </RadioButton>



                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Button
                                                        Classes="Accent"
                                                        Click="ShowDialog"
                                                        HorizontalAlignment="Right"
                                                        Margin="-10"
                                                        VerticalAlignment="Top">
                                                        <TextBlock Text="Create Link" />
                                                    </Button>
                                                </Grid>
                                            </Border>

                                            <StackPanel>
                                                <Border
                                                    Classes="Card"
                                                    Height="281"
                                                    Margin="15"
                                                    Width="430">
                                                    <TabControl>
                                                        <TabItem>
                                                            <TabItem.Header>
                                                                <TextBlock FontSize="16" Text="Invoices" />
                                                            </TabItem.Header>
                                                            <Grid>


                                                                <DataGrid
                                                                    AutoGenerateColumns="True"
                                                                    IsReadOnly="True"
                                                                    Margin="15,10,15,0"
                                                                    Name="myDG"
                                                                    VerticalAlignment="Top" />
                                                                <Button
                                                                    Click="ShowNotification"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Bottom">
                                                                    <TextBlock Text="New Invoice" />
                                                                </Button>
                                                            </Grid>
                                                        </TabItem>
                                                        <TabItem>
                                                            <TabItem.Header>
                                                                <TextBlock FontSize="16" Text="Questions" />
                                                            </TabItem.Header>
                                                            <StackPanel Margin="0,10,0,0">
                                                                <Expander Header="What is your cancellation policy ?">
                                                                    <TextBlock
                                                                        FontSize="13"
                                                                        Margin="15,15"
                                                                        TextWrapping="Wrap">
                                                                        We understand that things change. You can cancel your plan at any time and we'll refund you.
                                                                    </TextBlock>
                                                                </Expander>

                                                                <Expander Header="Can I change my plan later ?">
                                                                    <TextBlock Margin="20,5">Answer</TextBlock>
                                                                </Expander>

                                                                <Expander Header="How do I change my account email ?">
                                                                    <TextBlock Margin="20,5">Answer</TextBlock>
                                                                </Expander>

                                                            </StackPanel>
                                                        </TabItem>

                                                    </TabControl>
                                                </Border>
                                                <Border
                                                    Classes="Card"
                                                    Height="85"
                                                    Margin="15"
                                                    Width="430">
                                                    
                                                    <regis_theme:Stepper Margin="0,5,-4,0"  Name="stepS" />
                                                </Border>
                                                
                                                
                                            </StackPanel>


                                            <Border
                                                    Classes="Card"
                                                    Height="270"
                                                    Margin="15"
                                                    Width="961">
                                                    
                                                    <regis_theme:GroupBox  Header="Change Plan">
                                                        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,25,0,0">
                                                            <RadioButton IsChecked="True" Height="130" Width="210" Margin="8" Classes="GigaChips">
                                                                <StackPanel Margin="7" HorizontalAlignment="Left">
                                                                    <TextBlock Margin="5,8,5,4" Text="HOBBY" FontSize="12" FontWeight="DemiBold"  Foreground="{DynamicResource RegisThemeLowText}"></TextBlock>
                                                                    <TextBlock Margin="5,8" Text="1 Gb" FontSize="23" FontWeight="DemiBold" ></TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="5,3" Text="Plan for a moderate use as hobby." FontSize="15" Foreground="{DynamicResource RegisThemeLowText}"></TextBlock>
                                                                </StackPanel>
                                                            </RadioButton>
                                                            <RadioButton Height="130" Width="210" Margin="8" Classes="GigaChips">
                                                                <StackPanel Margin="7" HorizontalAlignment="Left">
                                                                    <TextBlock Margin="5,8,5,4" Text="PROFESSIONAL" FontSize="12" FontWeight="DemiBold"  Foreground="{DynamicResource RegisThemeLowText}"></TextBlock>
                                                                    <TextBlock Margin="5,8" Text="5 Gb" FontSize="23" FontWeight="DemiBold" ></TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="5,3" Text="Plan for a professional use in an application." FontSize="15" Foreground="{DynamicResource RegisThemeLowText}"></TextBlock>
                                                                </StackPanel>
                                                            </RadioButton>
                                                            <RadioButton Height="130" Width="210" Margin="8" Classes="GigaChips">
                                                                <StackPanel Margin="7" HorizontalAlignment="Left">
                                                                    <TextBlock Margin="5,8,5,4" Text="COMPANY" FontSize="12" FontWeight="DemiBold"  Foreground="{DynamicResource RegisThemeLowText}"></TextBlock>
                                                                    <TextBlock Margin="5,8" Text="50 Gb" FontSize="23" FontWeight="DemiBold" ></TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="5,3" Text="Plan for a industrial use in a company." FontSize="15" Foreground="{DynamicResource RegisThemeLowText}"></TextBlock>
                                                                </StackPanel>
                                                            </RadioButton>
                                                        </WrapPanel>
                                                    </regis_theme:GroupBox>
                                                </Border>

                                        </WrapPanel>
                                    </ScrollViewer>
                                </regis_theme:SideMenuItem.Content>
                            </regis_theme:SideMenuItem>
                            <regis_theme:SideMenuItem Header="Statistics" Icon="ChartLine">
                                <regis_theme:SideMenuItem.Content>
                                    <circleProgressBarsTestMvvm:CircleProgresstestView />
                                </regis_theme:SideMenuItem.Content>
                            </regis_theme:SideMenuItem>
                            <regis_theme:SideMenuItem Header="Library" Icon="BookmarkMultipleOutline">
                                <regis_theme:SideMenuItem.Content>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Text="Library Page"
                                        VerticalAlignment="Center" />
                                </regis_theme:SideMenuItem.Content>
                            </regis_theme:SideMenuItem>
                            <regis_theme:SideMenuItem Header="Users" Icon="UserSearchOutline">
                                <regis_theme:SideMenuItem.Content>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Text="Users Page"
                                        VerticalAlignment="Center" />
                                </regis_theme:SideMenuItem.Content>
                            </regis_theme:SideMenuItem>

                        </regis_theme:SideMenuModel.MenuItems>
                        <regis_theme:SideMenuModel.FooterMenuItems>
                            <regis_theme:SideMenuItem Header="Settings" Icon="SettingsOutline">
                                <regis_theme:SideMenuItem.Content>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Text="Settings Page"
                                        VerticalAlignment="Center" />
                                </regis_theme:SideMenuItem.Content>
                            </regis_theme:SideMenuItem>
                        </regis_theme:SideMenuModel.FooterMenuItems>
                        <regis_theme:SideMenuModel.CurrentPage>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Welcome in RegisThemeUI !</TextBlock>
                        </regis_theme:SideMenuModel.CurrentPage>
                    </regis_theme:SideMenuModel>
                </regis_theme:SideMenu.DataContext>
            </regis_theme:SideMenu>

        </regis_theme:DesktopPage>
    </regis_theme:InteractiveContainer>
</Window>
